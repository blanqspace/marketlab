# Core runtime
ENV_MODE=DEV
APP_BRAND=MarketLab
IPC_DB=runtime/ctl.db

# Telegram bot (fill with your bot token / chat IDs)
TELEGRAM_ENABLED=0
TELEGRAM_MOCK=1
TELEGRAM_BOT_TOKEN=000000000:replace-with-bot-token
TG_CHAT_CONTROL=-1001234567890
TG_ALLOWLIST=12345678,87654321
TELEGRAM_TIMEOUT_SEC=20
TELEGRAM_LONG_POLL_SEC=20
TELEGRAM_DEBUG=0

# Worker / orders defaults
ORDERS_TWO_MAN_RULE=1
CONFIRM_STRICT=1
ORDERS_TTL_SECONDS=300
ORDERS_TOKEN_LEN=6
ORDERS_SHOW_RECENT=6

# Dashboard cadences
EVENTS_REFRESH_SEC=5
KPIS_REFRESH_SEC=15
DASHBOARD_WARN_ONLY=0
